{
    "author": "Friedemann Sommer <social@friedemannsommer.com>",
    "bugs": {
        "url": "https://github.com/friedemannsommer/astro-node-fastify/issues"
    },
    "dependencies": {
        "@fastify/compress": "^8.3.1",
        "@fastify/static": "^9.0.0",
        "fastify": "^5.7.4"
    },
    "description": "Astro Fastify integration for Node.js",
    "devDependencies": {
        "@biomejs/biome": "2.3.14",
        "@types/chai": "5.2.3",
        "@types/mocha": "10.0.10",
        "@types/node": "24.10.11",
        "astro": "5.17.1",
        "chai": "6.2.2",
        "get-port": "7.1.0",
        "mocha": "11.7.5",
        "pkgroll": "2.23.0",
        "tsx": "4.21.0",
        "typedoc": "0.28.16",
        "typedoc-github-theme": "0.3.1",
        "typedoc-plugin-mdn-links": "5.1.1",
        "typedoc-plugin-missing-exports": "4.1.2",
        "typescript": "5.9.3"
    },
    "engines": {
        "node": "^20.3.0 || >=22.0.0"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.cjs",
            "default": "./dist/index.mjs"
        },
        "./preview": {
            "types": "./dist/preview.d.ts",
            "require": "./dist/preview.cjs",
            "default": "./dist/preview.mjs"
        },
        "./standalone": {
            "types": "./dist/standalone.d.ts",
            "require": "./dist/standalone.cjs",
            "default": "./dist/standalone.mjs"
        }
    },
    "files": [
        "dist"
    ],
    "homepage": "https://friedemannsommer.github.io/astro-node-fastify/",
    "keywords": [
        "astro",
        "fastify",
        "compression"
    ],
    "license": "MIT",
    "main": "./dist/index.cjs",
    "name": "astro-node-fastify",
    "peerDependencies": {
        "astro": ">=5.0 <=5.17"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/friedemannsommer/astro-node-fastify.git",
        "directory": "astro-adapter"
    },
    "scripts": {
        "build": "pkgroll --target=node20",
        "build:clean": "pkgroll --clean-dist",
        "check": "npm run check:biome && npm run check:ts",
        "check:biome": "biome check src",
        "check:ci": "biome ci src && npm run check:ts",
        "check:ts": "tsc -p tsconfig.json --noEmit",
        "docs": "typedoc",
        "test": "mocha --config .mocharc.json"
    },
    "sideEffects": false,
    "type": "module",
    "version": "0.4.15"
}
